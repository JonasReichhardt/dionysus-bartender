# main Screen

<MainScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .5
        Rectangle:
            size: root.width, 10
            pos: 0, 0

    MDBanner:
        id: banner
        over_widget: buttonLayout
        vertical_pad: 10
        on_touch_move:
            root.manager.transition.direction = 'up'
            root.manager.current = 'cocktail'

    MDGridLayout:
        id: buttonLayout
        cols: 2
        col_default_width: self.width/2
        row_default_height: self.height/3
        padding: 0, -10
        spacing: 12,0

        Button:
            id: btn0
            markup: True
            text: root.ingredients[0]
            on_release: root.onRelease(0)
            width: root.width/2
            height: root.height/3.2
            font_size: 26
            color: 0,0,0,1
            size_hint: None, None
            background_normal: ''
            background_color: 145/255, 206/255, 224/255, 1


        Button:
            id: btn1
            text: root.ingredients[1]
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.onRelease(1)
            width: root.width/2
