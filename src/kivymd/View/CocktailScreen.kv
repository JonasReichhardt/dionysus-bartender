<CocktailScreen>:
    name: "cocktail"

    MDToolbar:
        id: toolbar
        title: "Choose your cocktail"
        elevation: 10
        pos_hint: {"top": 1}

    MDSwiper:
        id: swiper
        size_hint_y: None
        height: root.height - toolbar.height - dp(40)
        y: root.height - self.height - toolbar.height - dp(20)

<CocktailItem>:
    RelativeLayout:
        FitImage:
            source: root.getIconPath()
            radius: [10,]

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"

            MDLabel:
                text: "MDLabel"
                font_style: "H5"
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": .5}
                opposite_colors: True