<CocktailScreen>:
    name: "cocktail"

    MDSwiper:
        id: swiper
        size_hint_y: None
        height: root.height - dp(40)
        y: root.height - self.height - dp(20)

<CocktailItem>:
    RelativeLayout:
        FitImage:
            source: root.getIconPath()
            radius: [20,]

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"

            MDLabel:
                text: "MDLabel"
                font_style: "H4"
                height: dp(40)
                pos_hint: {"center_y": .5}
                halign: "center"
                canvas.before:
                    Color:
                        rgba: app.theme_cls.primary_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [0,0,20,20]
